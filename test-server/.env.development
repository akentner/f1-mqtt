# F1 MQTT Bridge - Development Environment
# Configuration for Mock Server and Development

# F1 Live Timing API (Mock Server)
F1_NEGOTIATE_URL=http://localhost:3001/signalr/negotiate
F1_CONNECT_URL=ws://localhost:3001/signalr/connect

# MQTT Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_TOPIC_PREFIX=f1/dev
MQTT_CLIENT_ID=f1-mqtt-bridge-dev
MQTT_QOS=1
MQTT_RETAIN=false
MQTT_CLEAN_SESSION=true
MQTT_KEEP_ALIVE=60
MQTT_RECONNECT_PERIOD=1000
MQTT_CONNECT_TIMEOUT=30000
MQTT_SESSION_EXPIRY_INTERVAL=0
MQTT_BIRTH_MESSAGE=online
MQTT_WILL_MESSAGE=offline

# Logging Configuration
LOG_LEVEL=debug
LOG_TO_CONSOLE=true
LOG_TO_FILE=false

# Memory and Performance
NODE_ENV=development
ENABLE_MEMORY_MONITORING=true
ENABLE_GC=true

# SignalR Message Logging
SIGNALR_MESSAGE_LOGGING_ENABLED=true
SIGNALR_MESSAGE_LOGGING_FILE_PATH=./logs/signalr-messages-dev.log
SIGNALR_MESSAGE_LOGGING_MAX_FILE_SIZE=10485760
SIGNALR_MESSAGE_LOGGING_MAX_FILES=5

# Session Recording Configuration
SESSION_RECORDING_ENABLED=true
SESSION_RECORDING_PATH=./recordings
SESSION_RECORDING_MAX_SIZE=104857600
SESSION_RECORDING_AUTO_START=true
SESSION_DETECTION_TIMEOUT=30000
SESSION_RECORDING_FILTER_KEEP_ALIVE=true

# Health Server
HEALTH_SERVER_PORT=3000
HEALTH_CHECK_ENDPOINT=/health
