# F1 MQTT Bridge - Production Environment
# Configuration for Real F1 Live Timing API

# F1 Live Timing API (Official)
F1_NEGOTIATE_URL=https://livetiming.formula1.com/signalr/negotiate
F1_CONNECT_URL=wss://livetiming.formula1.com/signalr/connect

# MQTT Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_TOPIC_PREFIX=f1
MQTT_CLIENT_ID=f1-mqtt-bridge
MQTT_QOS=1
MQTT_RETAIN=false
MQTT_CLEAN_SESSION=true
MQTT_KEEP_ALIVE=60
MQTT_RECONNECT_PERIOD=1000
MQTT_CONNECT_TIMEOUT=30000
MQTT_SESSION_EXPIRY_INTERVAL=0
MQTT_BIRTH_MESSAGE=online
MQTT_WILL_MESSAGE=offline

# Logging Configuration
LOG_LEVEL=info
LOG_TO_CONSOLE=false
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/f1-mqtt.log
LOG_MAX_SIZE=20971520
LOG_MAX_FILES=5

# Memory and Performance
NODE_ENV=production
ENABLE_MEMORY_MONITORING=false
ENABLE_GC=true

# SignalR Message Logging
SIGNALR_MESSAGE_LOGGING_ENABLED=true
SIGNALR_MESSAGE_LOGGING_FILE_PATH=./logs/signalr-messages.log
SIGNALR_MESSAGE_LOGGING_MAX_FILE_SIZE=20971520
SIGNALR_MESSAGE_LOGGING_MAX_FILES=10

# Session Recording Configuration
SESSION_RECORDING_ENABLED=true
SESSION_RECORDING_PATH=./recordings
SESSION_RECORDING_MAX_SIZE=209715200
SESSION_RECORDING_AUTO_START=true
SESSION_DETECTION_TIMEOUT=30000
SESSION_RECORDING_FILTER_KEEP_ALIVE=false

# Health Server
HEALTH_SERVER_PORT=3000
HEALTH_CHECK_ENDPOINT=/health

# Home Assistant Integration
HOME_ASSISTANT_DISCOVERY_PREFIX=homeassistant
HOME_ASSISTANT_NODE_ID=f1-mqtt-bridge
