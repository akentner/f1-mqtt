# F1 MQTT Bridge - Environment Configuration

# ==============================================
# F1 Live Timing API Configuration
# ==============================================

# For PRODUCTION (Real F1 API) - Default values, uncomment to override
# F1_NEGOTIATE_URL=https://livetiming.formula1.com/signalr/negotiate
# F1_CONNECT_URL=wss://livetiming.formula1.com/signalr/connect

# For DEVELOPMENT (Mock Server) - Uncomment lines below
# F1_NEGOTIATE_URL=http://localhost:3001/signalr/negotiate
# F1_CONNECT_URL=ws://localhost:3001/signalr/connect

# SignalR Configuration (legacy, can be removed)
SIGNALR_HUB_URL=https://livetiming.formula1.com/signalr
SIGNALR_HUB_NAME=f1TimingHub
# SIGNALR_ACCESS_TOKEN=your_token_here

# MQTT Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
# MQTT_USERNAME=your_username
# MQTT_PASSWORD=your_password
MQTT_CLIENT_ID=f1-mqtt-bridge
MQTT_TOPIC_PREFIX=f1
MQTT_QOS=1
MQTT_RETAIN=false

# Logging Configuration
LOG_LEVEL=info

# SignalR Message Logging
SIGNALR_MESSAGE_LOGGING=false
SIGNALR_LOG_FILE_PATH=./logs/signalr-messages.log
SIGNALR_LOG_MAX_FILE_SIZE=52428800
SIGNALR_LOG_MAX_FILES=10

# Session Recording
SESSION_RECORDING_ENABLED=false
SESSION_RECORDING_PATH=./recordings
SESSION_RECORDING_MAX_SIZE=104857600
SESSION_RECORDING_AUTO_START=false
SESSION_DETECTION_TIMEOUT=30000
LOG_CONSOLE=true
LOG_FILE=false
# LOG_FILE_PATH=./logs/app.log

# Server Configuration
PORT=3000
HEALTH_ENDPOINT=/health

# Home Assistant Configuration
HA_DISCOVERY_PREFIX=homeassistant
HA_NODE_ID=f1_telemetry

# Node.js Environment
NODE_ENV=development
